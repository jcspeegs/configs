# list
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -lrtaFh'
alias l='ls'
alias l.="ls -A | egrep '^\.'"

alias h='history'

# tmux stuffs
alias tls='tmux ls'
alias t='tmux new -s'
alias ta='tmux attach -t'

# git
alias gs='git status'
alias ga='git add'
alias gc='git commit'

alias cfg='/usr/bin/git --git-dir=$HOME/.cfg --work-tree=$HOME'
alias cfgs='cfg status'

alias vimup='cfg submodule foreach git pull origin master'

# source speicific configs
alias sb='source ~/.bashrc'
alias sa='source ~/.alais'

# Aliases for software managment
# pacman or pm
alias pacman='sudo pacman --color auto'
alias update='sudo pacman -Syyu'

#pacman unlock
alias unlock="sudo rm /var/lib/pacman/db.lck"
alias rmpacmanlock="sudo rm /var/lib/pacman/db.lck"

# paru as aur helper - updates everything
alias upall="paru -Syu --noconfirm"

# fix obvious typo's
alias cd..='cd ..'
alias pdw='pwd'
alias udpate='sudo pacman -Syu'
alias upate='sudo pacman -Syu'
alias updte='sudo pacman -Syu'
alias updqte='sudo pacman -Syu'
#alias upqll='paru -Syu --noconfirm'
alias upqll='paru -Syu'
#alias upal='paru -Syu --noconfirm'
alias upal='paru -Syu'
#alias upal='paru -Syu --noconfirm'
alias upal='paru -Syu'

## Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

#readable output
alias df='df -h'

#free
alias free="free -mt"

#userlist
alias userlist="cut -d: -f1 /etc/passwd"

#ps
alias psa="ps auxf"
alias psgrep="ps aux | grep -v grep | grep -i -e VSZ -e"

#grub update
#alias update-grub="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias update-grub="sudo grub-mkconfig -o /etc/grub2.cfg"

#switch between bash and zsh
alias tobash="sudo chsh $USER -s /bin/bash && echo 'Now log out.'"
alias tozsh="sudo chsh $USER -s /bin/zsh && echo 'Now log out.'"
alias tofish="sudo chsh $USER -s /bin/fish && echo 'Now log out.'"

#hardware info --short
alias hw="hwinfo --short"

#check vulnerabilities microcode
alias microcode='grep . /sys/devices/system/cpu/vulnerabilities/*'

